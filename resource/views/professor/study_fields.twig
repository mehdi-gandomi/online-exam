{% extends 'layout/professor.twig' %}

{% block content %}
    <div class="card">
     <div class="card-body" style="min-height: 550px">
         <div class="row">
             <div class="col-md-5">
                 <h4 class="text-center mt-4">افزودن گروه امتحانی</h4>
                 <form action="/user/fields/new" id="newStudyForm" class="row align-items-center p-3">
                     <div class="form-group col-md-8">
                         <label for="fieldName">نام گروه امتحانی</label>
                         <input class="form-control" type="text" id="fieldName" name="name" >
                     </div>
                     <div class="col-md-4">
                         <input type="submit" class="btn btn-success mt-3" value="افزودن">
                     </div>
                 </form>
             </div>
             <div class="col-md-7" style="padding-left: 2rem">
                 <h4 class="text-center mt-4">گروه های امتحانی</h4>
                 <table class="table OrdersTable compact is--responsive">
                     <thead>
                     <th class="text-center bg-teal-dark" scope="col">شماره گروه امتحانی</th>
                     <th class="text-center bg-teal-dark" scope="col">عنوان گروه امتحانی</th>
                     <th class="text-center bg-teal-dark" scope="col">عملیات</th>
                     </thead>
                     <tbody id="newOrdersWrap">
                     {% for field in study_fields %}
                         <tr>
                             <td data-label="شماره گروه">{{field.id}}</td>
                             <td data-label="عنوان گروه">{{field.title}}</td>

                             <td data-label="عملیات" class="order-actions">
                                 <button onclick="showFieldInfo('{{field.id}}')" class="btn btn-primary">
                                     <i class="icon-info"></i>
                                     <span>جزئیات گروه</span>
                                 </button>
                                 <button onclick="deleteField('{{field.id}}')" class="btn btn-danger">
                                     <i class="icon-trash"></i>
                                     <span>حذف گروه</span>
                                 </button>
                             </td>
                         </tr>
                     {% endfor %}

                     </tbody>
                 </table>
             </div>
         </div>
     </div>
    </div>
{% endblock %}

{% block script_below %}
    <script src="/public/js/sweetalert2@8.js"></script>
    <script src="/public/js/study-fields.js"></script>
{% endblock %}
